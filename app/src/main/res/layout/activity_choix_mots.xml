<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ChoixMots"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_choix_nb_joueurs_text_choix_carte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_weight="1"
        android:text="Choisi une carte :"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:id="@+id/activity_contenue_carte">
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:id="@+id/activity_choix_nb_joueurs_carte_1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="CARTE" />

            <Button
                android:id="@+id/activity_choix_nb_joueurs_carte_2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="CARTE" />

            <Button
                android:id="@+id/activity_choix_nb_joueurs_carte_3"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="CARTE" />

        </TableRow>


    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_choix_nb_joueurs_boutton_moins_joueurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moins" />

        <Button
            android:id="@+id/activity_choix_nb_joueurs_bouton_plus_joueurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plus" />
    </LinearLayout>

</LinearLayout>